{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Locke",
  "version": "0.1.0",
  "identifier": "com.locke.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Locke",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 550,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "contentProtected": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
